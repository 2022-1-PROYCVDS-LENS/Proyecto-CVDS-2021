<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="persistence.mybatisimpl.mappers.ReservaMapper">

    <resultMap type="Reserva" id="ReservaResult">
        <id property="id" column="id_reserva"/>
        <result property="inicio" column="inicio"/>
        <result property="fin" column="fin"/>
        <result property="recurrente" column="recurrente"/>
        <result property="estado" column="estado"/>
        <result property="solicitud" column="solicitud"/>
        <association property="recurso" javaType="Recurso" resultMap="sampleprj.dao.dato.mybatis.mappers.RecursoMapper.RecursoResult.RecursoResult"/>
        <association property="usuario" javaType="Usuario" resultMap="sampleprj.dao.dato.mybatis.mappers.UsuarioMapper.UsuarioResult.UsuarioResult"/>
        <collection property="reservaRecurrentes" ofType="ReservaRecurrente" resultMap="persistence.mybatisimpl.mappers.ReservaRecurrenteMapper.TipoRecursoResult"/>
        <collection property="usuarios" ofType="Usuario" resultMap="sampleprj.dao.dato.mybatis.mappers.UsuarioMapper.UsuarioResult.UsuarioResult"/>
    </resultMap>

    <insert parameterType="map" id="reservarRecurso">
        insert into reservas(id_reserva, id_usuario, id_recurso, inicio, fin, recurrente, estado, solicitud)
        values (nextval('reservas_id') #{usuario.id}, #{recurso.id}, #{inicio}, #{fin}, #{recurrente}, #{estado}, #{solicitud})
    </insert>

    <select id="consultarReservasActivas" resultMap="ReservaResult">
        select * from reservas WHERE reservas.estado = "activa" AND reservas.id_usuario = #{id}
    </select>

    <select id="consultarReservasCanceladas" resultMap="ReservaResult">
        select * from reservas WHERE reservas.estado = "cancelada" AND reservas.id_usuario = #{id}
    </select>

    <select id="consultarReservasPasadas" resultMap="ReservaResult">
        select * from reservas WHERE reservas.estado = "finalizada" AND reservas.id_usuario = #{id}
    </select>


</mapper>