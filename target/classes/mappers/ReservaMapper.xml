<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="persistence.mybatisimpl.mappers.ReservaMapper">

    <resultMap type="Reserva" id="ReservaResult">
        <id property="id" column="id_reserva"/>
        <result property="inicio" column="inicio"/>
        <result property="fin" column="fin"/>
        <result property="recurrente" column="recurrente"/>
        <result property="estado" column="estado"/>
        <result property="solicitud" column="solicitud"/>
        <association property="idRecurso" javaType="Recurso" resultMap="persistence.mybatisimpl.mappers.RecursoMapper.RecursoResult"/>
        <association property="idUsuario" javaType="Usuario" resultMap="persistence.mybatisimpl.mappers.UsuarioMapper.UsuarioResult"/>
<!--        <collection property="reservaRecurrentes" ofType="ReservaRecurrente" resultMap="persistence.mybatisimpl.mappers.ReservaRecurrenteMapper.ReservaRecurrenteResult"/>-->
<!--        <collection property="usuarios" ofType="Usuario" resultMap="persistence.mybatisimpl.mappers.UsuarioMapper.UsuarioResult"/>-->
<!--        <collection property="recursos" ofType="Recurso" resultMap="persistence.mybatisimpl.mappers.RecursoMapper.RecursoResult" columnPrefix="rec_"/>-->
    </resultMap>

    <select id="consultarReservas" resultMap="ReservaResult">
        select
        res.id_reserva,
        res.inicio,
        res.fin,
        usu.nombre,
        rec.nombre
        from public.reservas as res
        join recursos as rec
        ON res.id_recurso = rec.id_recurso
        join usuarios as usu
        ON res.id_usuario = usu.id_usuarios;
    </select>

</mapper>